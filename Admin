<script type="text/javascript">// <![CDATA[

// This is where you can change the background image and how it appears. Background image should be changed inside the parens ()
// The text "center center" indicates where the background is positioned. The left option can be top, bottom, or center. The right option can be right, left, or center
// Background-size indicates how the background should appear. Cover will make sure the background image covers all the white space. You can swap this for "contain" or height and width properties.

var background = 'background: url(https://images.unsplash.com/photo-1432821579285-1b649e5b1ce3?dpr=1&auto=format&fit=crop&w=1920&h=1080&q=80&cs=tinysrgb&crop=) center center; background-size: cover;'

// Change the link and icon colors below:
link_color = "#fff"
link_hover_color = "rgb(255, 202, 40)"

//
var style = document.createElement('style')
style.type = 'text/css'
style.innerHTML = '.wrapper {height: 100%; width: 100%; position: relative; box-sizing: border-box;} .wrapper a:hover {text-decoration: none;} .wrapper .background { position: relative; height: 100%; width: 100%; ' + background + ' padding-bottom: 80px;} .buttons-wrapper-outer { position: relative; top: 10%; -ms-transform: translateY(5%); -webkit-transform: translateY(5%); transform: translateY(5%); text-align: center;} .buttons-wrapper-inner { position: relative; left: 0; right: 0; max-width: 1000px; margin: 0 auto;} .header { position: relative; text-align: center; margin-bottom: 50px;} .header-text { text-transform: uppercase; font-size: 22px; font-weight: 700; width: 400px; margin: auto; padding: 5px 0px 15px 0px; color: rgba(255,255,255,9); border-radius: 4px; background-color: rgba(36, 39, 53,.8); transition: all .3s ease;}  h2 { font-size: 30px; margin-top: 20px; margin-bottom: 10px; font-family: inherit; font-weight: 500; line-height: 1.1; color: inherit;} .list-inline { padding-left: 0; margin-left: -5px; list-style: none; padding-left: 0; margin-top: 0; margin-bottom: 10px;} .list-inline>li { display: inline-block; padding-right: 5px; padding-left: 5px;} .links { text-align: center; color: white; margin: 15px; margin-bottom: 25px; transition: all .3s ease;} .small { font-size: 85%;} a, a:visited {color: ' + link_color + '; text-decoration: none; background-color: transparent;} a:focus {outline: thin dotted #fff; -webkit-focus-ring-color; outline-offset: -2px;} a:focus, a:hover {text-decoration: none; color: ' + link_hover_color + '; } a:active, a:hover {outline: 0;} .links i { display: block; margin-bottom: 15px; text-shadow: 0px 2px 5px rgba(0,0,0,.4); transition: all .3s ease;} .links span { text-transform: uppercase; font-weight: 700; font-size: 20px; text-shadow: 0px 2px 5px rgba(0,0,0,.4); transition: all .3s ease;}'
// Options that can be added to the above list of CSS:
// Can add .nav-icon-recordbar-icontext{display:none;} to hide the Close Record button on online resources added to navigation
// Can add .widget-heading{display:none;} to hide Widget title bar
// Can add .nav-icon-titlebar-icononly{display:none;} to hide Widget Page title bar
// Can add .widget .subheading{border-width:0px;}.widget .widget-content{border-width:0px;} to hide widget border in simplified theme

document.getElementsByTagName('head')[0].appendChild(style)

for (i=0; i< Icons.length; i++) {
var li = document.createElement("li");
li.innerHTML = '<a class="links small" href="' + NavElements[i] + '"> \n <i class="fa ' + Icons[i] + ' fa-4x"></i> \n <span>' + NavNames[i] + '</span></a>';
